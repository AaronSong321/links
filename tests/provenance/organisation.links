var db = database "links";

fun depNameProv (d) { ("departments", "name", d.id) }
fun empNameProv (e) { ("employees", "name", e.id) }

var departments =
  table "departments"
  with (id: Int,
        name: String)
  where name prov depNameProv
  from db;

var employees =
  table "employees"
  with (id: Int,
        dept: String,
        name: String,
        salary : Int)
  where name prov empNameProv
  # tablekeys [["emp"]]
  from db;

var tasks =
  table "tasks"
  with (id: Int,
        employee: String,
        task: String)
  # tablekeys [["emp","tsk"]]
  from db;

var contacts =
  table "contacts"
  with (id: Int,
        dept: String,
        name: String,
        "client": Bool)
  # tablekeys [["name"]]
  from db;

fun dropTables() {
  delete (x <-- departments);
  delete (x <-- employees);
  delete (x <-- tasks);
  delete (x <-- contacts);
}

