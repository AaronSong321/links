# Count the number of elements in a list
fun numElems(lst) server
{
  switch(lst)
  {
    case [] -> 0
    case x::xs -> 1 + numElems(xs)
  }
}

# Logout from the IDE
sig logout : () -> ()
fun logout() server
{
  delete (var sessId <-- sessionsTable)
    where (sessId.id == (getCookie("linkside")));

  setCookie("linkside","");
  redirect("login.links");
  #main(Just(false))
}

