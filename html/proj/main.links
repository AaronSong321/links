# Return the uid of the current sessions' owner.
sig getUid : () -> Int
fun getUid() server
{
  var uids = for (var sid <-- sessionsTable)
             where (sid.id == getCookie("linkside"))
              [sid.uid];
  if (numElems(uids) == 0)
    1
  else
    hd(uids)
}

