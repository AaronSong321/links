# Examples where the continuation escapes the handler
fun run(h, c, arg) {
    var k = fromJust(h(c));
    k(arg)
}

fun fromJust(x) {
    switch(x) { case Just(x) -> x }
}

fun escapeViaJust(x) {
    handle(x) {
    	      case Escape(p,k) -> Just(k)
	      case Return(x)   -> Just(x)
    }
}

fun comp() {
    do Escape();
    "I recovered"
}