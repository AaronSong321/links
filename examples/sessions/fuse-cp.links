sig user : (~Calc, !Int.EndBang) ~> EndBang
fun user(c, return) {
  var c = select Mul c;
  var (result, c) = receive(send(6,send(7,c)));
  wait(c);
  send(result, return)
}

run (fun (return) {<| nu c.(nu s.(s <-> c | {calc(s)}) | {user(c,return)}) |>})
